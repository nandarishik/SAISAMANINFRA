<section id="contact" class="contact-section">
    <div class="contact-container">
        
        <div class="contact-wrapper">
            
            <div class="contact-info-side">
                <div class="contact-header">
                    <span class="section-label">Contact Us</span>
                    <h2>Let's Build Your Legacy</h2>
                    <p>
                        Ready to turn your vision into reality?
                        Our team is ready to architect your next masterpiece.
                    </p>
                </div>

                <div class="contact-details">
                    <div class="contact-card-item">
                        <div class="icon-box">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                                <circle cx="12" cy="10" r="3"/>
                            </svg>
                        </div>
                        <div class="text-content">
                            <span class="label">Visit Us</span>
                            <p>Plot No. 45, Financial District<br>Gachibowli, Hyderabad, 500032</p>
                        </div>
                    </div>

                    <div class="contact-card-item">
                        <div class="icon-box">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                            </svg>
                        </div>
                        <div class="text-content">
                            <span class="label">Call Us</span>
                            <a href="tel:+919000446586" class="contact-link">+91 90004 46586</a>
                        </div>
                    </div>

                    <div class="contact-card-item">
                        <div class="icon-box">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                        </div>
                        <div class="text-content">
                            <span class="label">Email Us</span>
                            <a href="mailto:saisamaninfra@gmail.com" class="contact-link">
                                saisamaninfra@gmail.com
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CONTACT FORM -->
            <div class="contact-form-wrapper">
                <form id="contactForm" class="modern-form">
                    <h3>Send a Message</h3>
                    
                    <div class="form-grid">
                        <div class="input-group">
                            <input type="text" name="name" id="name" required placeholder=" ">
                            <label for="name">Your Name</label>
                            <span class="highlight-bar"></span>
                        </div>

                        <div class="input-group">
                            <input type="email" name="email" id="email" required placeholder=" ">
                            <label for="email">Email Address</label>
                            <span class="highlight-bar"></span>
                        </div>
                    </div>

                    <div class="input-group">
                        <input type="tel" name="phone" id="phone" placeholder=" ">
                        <label for="phone">Phone Number</label>
                        <span class="highlight-bar"></span>
                    </div>

                    <div class="input-group">
                        <textarea name="message" id="message" rows="1" required placeholder=" "></textarea>
                        <label for="message">Tell us about your project</label>
                        <span class="highlight-bar"></span>
                    </div>

                    <button type="submit" class="btn-submit-luxury">
                        <span>Send Request</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="5" y1="12" x2="19" y2="12"/>
                            <polyline points="12 5 19 12 12 19"/>
                        </svg>
                    </button>

                    <p style="font-size:0.8rem; opacity:0.6; margin-top:12px;">
                        Your message will be sent instantly to our team.
                    </p>
                </form>

                <div class="form-backdrop"></div>
            </div>

        </div>
    </div>
</section>
